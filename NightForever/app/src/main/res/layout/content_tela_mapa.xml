<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sandoartestudio.nightforever.TelaMapa"
    tools:showIn="@layout/app_bar_tela_mapa">


    <ImageButton
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:id="@+id/bt_facebook"
        android:background="@drawable/facebook"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/bt_twitter"
        android:layout_alignTop="@+id/bt_facebook"
        android:layout_toRightOf="@+id/bt_facebook"
        android:layout_toEndOf="@+id/bt_facebook"
        android:layout_marginLeft="13dp"
        android:background="@drawable/twitter" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/bt_google"
        android:layout_alignBottom="@+id/bt_twitter"
        android:layout_toRightOf="@+id/bt_twitter"
        android:layout_toEndOf="@+id/bt_twitter"
        android:layout_marginLeft="13dp"
        android:background="@drawable/google" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/bt_pinterest"
        android:layout_alignBottom="@+id/bt_google"
        android:layout_toRightOf="@+id/bt_google"
        android:layout_toEndOf="@+id/bt_google"
        android:layout_marginLeft="13dp"
        android:background="@drawable/pinterest" />

</RelativeLayout>
